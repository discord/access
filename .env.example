# FastAPI Configuration Example
# Copy this file to .env and update with your values

# Environment (development, test, production)
ENV=development

# Application
APP_VERSION=2.0.0
CLIENT_ORIGIN_URL=http://localhost:3000

# Database
DATABASE_URI=sqlite:///instance/access.db
# DATABASE_URI=postgresql://user:password@localhost/access
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=access
DATABASE_USES_PUBLIC_IP=False
CLOUDSQL_CONNECTION_NAME=

# Okta Configuration
OKTA_DOMAIN=your-domain.okta.com
OKTA_API_TOKEN=your-api-token
OKTA_USE_GROUP_OWNERS_API=False
OKTA_GROUP_PROFILE_CUSTOM_ATTR=
OKTA_WEBHOOK_ID=
OKTA_IGA_ACTOR_ID=

# User Configuration
CURRENT_OKTA_USER_EMAIL=wumpus@discord.com
USER_DISPLAY_CUSTOM_ATTRIBUTES=Title,Manager
USER_SEARCH_CUSTOM_ATTRIBUTES=
MAX_ACCESS_REQUEST_AGE_SECONDS=604800

# Cloudflare Access (Optional)
# CLOUDFLARE_APPLICATION_AUDIENCE=
# CLOUDFLARE_TEAM_DOMAIN=

# OIDC Configuration (Optional)
# OIDC_CLIENT_SECRETS=/path/to/client_secrets.json
# OIDC_INTROSPECTION_AUTH_METHOD=client_secret_post
# OIDC_CLOCK_SKEW=60
# OIDC_OVERWRITE_REDIRECT_URI=
# OIDC_SCOPES=openid email
# OIDC_SERVER_METADATA_URL=

# Security
# SECRET_KEY=your-secret-key-here
# SECRET_KEY_FILE=/path/to/secret.key

# App Creator
# APP_CREATOR_ID=

# Sentry (Optional)
# FLASK_SENTRY_DSN=
# REACT_SENTRY_DSN=